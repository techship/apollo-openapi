{
    "name": "nass59/apollo-openapi",
    "type": "library",
    "description": "Apollo - OpenAPI",
    "keywords": ["php8", "openapi"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Nassim Afrete",
            "email": "nass5902@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "friends-of-phpspec/phpspec-code-coverage": "dev-master",
        "justinrainbow/json-schema": "5.*",
        "phpmetrics/phpmetrics": "dev-master",
        "phpspec/phpspec": "6.*"
    },
    "minimum-stability": "dev",
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Apollo\\Component\\OpenAPI\\": "src/" },
        "exclude-from-classmap": [
            "/spec/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
